<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/preview"


    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="DATOS PERSONALES"
        android:textSize="30dp"
        android:id="@+id/textView4"
        android:layout_gravity="center"/>



        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="25dp"
            android:layout_height="110dp"
            android:padding="5dp"

            android:background="@drawable/bordeframe">


            <TextView android:text="@string/Cambiar_nombre" android:layout_width="wrap_content"
                android:layout_marginTop="10dp"

                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:id="@+id/textView"

                android:textSize="25dp" />

            <EditText
                android:layout_width="fill_parent"
                android:textColor="@android:color/white"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bordeet"
                android:paddingLeft="5dp"
                android:id="@+id/editText3"
                android:textSize="19dp"
                android:layout_gravity="left|bottom" />
        </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="15dp"
        android:layout_height="110dp"
        android:padding="5dp"

        android:background="@drawable/bordeframe">


        <TextView android:text="@string/default_value" android:layout_width="wrap_content"
            android:layout_marginTop="10dp"

            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"

            android:textSize="25dp" />

        <EditText
            android:layout_width="fill_parent"
            android:textColor="@android:color/white"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bordeet"
            android:paddingLeft="5dp"
            android:id="@+id/editText2"
            android:textSize="19dp"
            android:layout_gravity="left|bottom" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="15dp"
        android:layout_height="110dp"
        android:padding="5dp"

        android:background="@drawable/bordeframe">


        <TextView android:text="@string/genero_dig" android:layout_width="wrap_content"
            android:layout_marginTop="10dp"

            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"

            android:textSize="25dp" />

        <EditText
            android:layout_width="fill_parent"
            android:textColor="@android:color/white"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bordeet"
            android:paddingLeft="5dp"
            android:id="@+id/editText"
            android:textSize="19dp"
            android:layout_gravity="left|bottom" />
    </FrameLayout>







</LinearLayout>
