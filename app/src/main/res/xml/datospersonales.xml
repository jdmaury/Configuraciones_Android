<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="datos_personales"
        android:title="@string/Cambiar_nombre"
        android:defaultValue="@string/default_name"

        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />


    <EditTextPreference
        android:key="edad"
        android:title="@string/edad"
        android:defaultValue="@string/default_value"

        android:selectAllOnFocus="true"
        android:inputType="number"

        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="genero"
        android:title="@string/genero_dig"
        android:entries="@array/array_genero_values"
        android:entryValues="@array/array_genero_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />




</PreferenceScreen>